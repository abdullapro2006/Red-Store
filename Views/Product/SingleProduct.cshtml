                    </div>
                </div>

            </div>
            <div class="col-2">
                <h1>@Model.Name</h1>
                <h4>$@Model.Price</h4>
                <select>
                <option>Select Size</option>
                    @foreach (var size in Model.ProductSizes.Select(ps => ps.Size))
                {
                    <option value="@size.Id">@size.Name</option>
                }
                  
                 
                 
                </select>
                <select>
                    <option>Select Color</option>
                @foreach (var color in Model.ProductColors.Select(pc => pc.Color))
                {
                    <option value="@color.Id">@color.Name</option>
                }
                    
                </select>
                <input type="number" value="1">
                <a href="" class="btn">Add Card</a>
                <h3>Product Details <i class="fa fa-indent"></i></h3>
                <br>
                <p>
                    Give your summer wardrobe a style upgrade with the HRX
                    Men's active T-Shirt. Team it with a pair of shorts for
                    your morning workout or a denims for an evening out with
                    the guys.
                </p>
            </div>
        </div>
    </div>

