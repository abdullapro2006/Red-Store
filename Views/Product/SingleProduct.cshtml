    <!--------- single-products details --------->

    <div class="small-container single-product">
        <div class="row">
            <div class="col-2">
            <img src="@UploadDirectory.Products.GetUrl(Model.ImageNameInFileSytem) width="100%" id="ProductImg">

                <div class="small-img-row">
