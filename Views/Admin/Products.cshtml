@model List<Product>
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Products Table</title>
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>

    <div class="container">
        <h2>Products</h2>
        <a href="~/admin/productadd" class="btn btn-success">New Product</a>
        <table class="table table-striped">
            <thead>
                <tr>
                    <th>#</th>
                    <th>Name</th>
                    <th>Price</th>
                    <th>Rating</th>
                    <th>Category</th>
                    <th>Actions</th>
                </tr>
            </thead>
            <tbody>

                @{
                    int rowcount = 1;
                }
                @foreach(var product in Model)
                {
                    <tr>
                        <td>@rowcount</td>
                        <td>@product.Name</td>
                        <td>$@product.Price</td>
                        <td>@product.Rating</td>
                        <td>@(product.Category?.Name ?? "-")</td>
                        <td>
                            <a href="~/admin/ProductEdit?id=@product.Id" class="btn btn-warning">Edit</a>
                            <a href="~/admin/DeleteProduct?id=@product.Id" class="btn btn-danger">Remove</a>
                            </td>
                    </tr>
                    rowcount++;
                }
             
              
                <!-- Add more rows for additional products -->
            </tbody>
        </table>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
